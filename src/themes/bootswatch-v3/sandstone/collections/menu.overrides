.ui.menu .item {
  font-size: 12px;
}

.ui.secondary.menu:not(.pointing) .active.item,
.ui.secondary.menu:not(.pointing) .item:hover {
  border: 1px solid @gray-light;
}

.ui.menu input,
.ui.menu input:focus,
.ui.menu input:active,
.ui.menu .ui.form input,
.ui.menu .ui.form input:focus,
.ui.menu .ui.form input:active {
  color: #fff;
}

.ui.secondary.menu .item {
  color: @secondaryItemColor;
}

.ui.menu i.icon {
  color: @gray-light !important;
}

.ui.text.menu .item:hover {
  color: @gray-dark;
}
