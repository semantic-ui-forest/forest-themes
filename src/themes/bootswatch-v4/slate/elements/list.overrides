.ui.list {
  border-color: rgba(0,0,0,.6);

  &:hover {
    background-color: lighten(@pageBackground, 10%);
  }

  &:active {
    color: #fff;
    background-color: lighten(@pageBackground, 10%);
    border-color: rgba(0,0,0,.6);
  }

  &:disabled {
    color: #52575c;
  }

  .item:hover {
    background-color: darken(@gray-darker, 5%);
  }
}
